{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "mix",
    "tasks": [
        {
            "type": "shell",
            "label": "Elixir build",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "args": [
                "compile"
            ],
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}